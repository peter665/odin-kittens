<%= form_for @kitten do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :age %>
    <%= f.text_field :age, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :cuteness %>
    <%= f.text_field :cuteness, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :softness %>
    <%= f.text_field :softness, class: 'form-control' %>
  </div>
  <%= link_to "Delete", kitten_path(@kitten.id), method: :delete,
      data: {confirm: 'Are you sure?'}, class: 'pull-right btn btn-danger' %>
  <%= f.submit yield(:button_text), class: 'btn btn-primary' %>
<% end %>
